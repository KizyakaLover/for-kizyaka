n = int(input("Введите число для проверки на простоту: "))


def is_prime(n):
    if n <= 1:
        return False
    for i in range(2, n):
        if n % i == 0:
            return False
    return True


num = int(n)
result = is_prime(n)
print(str(num) + " является простым числом: " + str(result))
